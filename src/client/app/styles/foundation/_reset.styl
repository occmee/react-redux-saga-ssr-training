normalize-css()

*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-touch-callout none

html
  font-size 62.5%
  height 100%

body
  font-size 1.4em
  letter-spacing 0.05em
  padding 0
  line-height 1.7
  min-height 100%
  height 100%
  overflow hidden
  font-family default_font_family
  word-break break-all

h1
  margin 0

p
  margin 0
  padding 0

ul
  list-style none
  padding 0
  margin 0

input, textarea
  outline none
  appearance none
  border none
input
  white-space nowrap

a
  text-decoration none

#root
  width 360px
  height 100%

.app
  height 100%

