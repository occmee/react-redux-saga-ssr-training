{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "sourceMap": false,
    "removeComments": true,
    "rootDir": "./src/server",
    "outDir": "./build/server"
  },
  "include": [
    "src/server/script/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
